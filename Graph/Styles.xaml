<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Ellipse">
        <Setter Property="Fill"  Value="{DynamicResource pointGradient}"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Panel.ZIndex" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style TargetType="Line">
        <Setter Property="StrokeThickness" Value="5"/>
        <Setter Property="Stroke" Value="{DynamicResource lineGradient}"/>
        <Setter Property="Panel.ZIndex" Value="1"/>
        <Setter Property="StrokeEndLineCap" Value="Round"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <RadialGradientBrush x:Key="pointGradient" RadiusX="1" RadiusY="1">
        <GradientStop Offset="0" Color="#800080"/>
        <GradientStop Offset="0.96" Color="#30D5C8"/>
    </RadialGradientBrush>
    <LinearGradientBrush x:Key="lineGradient">
        <GradientStop Offset="0" Color="#808080"/>
        <GradientStop Offset="0.5" Color="#DAA520"/>
        <GradientStop Offset="1" Color="#FFA000"/>
    </LinearGradientBrush>

</ResourceDictionary>